#include<bits/stdc++.h>

using namespace std;
using ll = long long ;
int main() {
  ios::sync_with_stdio(false);
	cin.tie(NULL);
	ll t, n, m, ans, s, sum, x, y, r, p, i, j;

	cin >> t;

	while ( t --) {
		string str;
		
		cin >> str;
		
		string ans = "";
		p = 0;
		for (i = 0; i + 1 < str.size(); i ++) {
			ans += str[i];
			if ( p == 0 && str[i] == str[i + 1]) {
				if ( str[i] == 'a') ans += 'b';
				else ans += 'a';
				p = 1;
			}
		}
		ans += str[i];
		if ( p == 0) {
			if ( str[i] == 'a') ans += 'b';
				else ans += 'a';
				p = 1;
		}
		cout << ans << endl;
		

	}
}
